<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:openDrawer="start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/toolbarBg"
            app:theme="@style/ThemeOverlay.AppCompat"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp"
            >

            <ImageView
                android:id="@+id/menu_drawer"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="?attr/iconMenu"
                android:layout_gravity="start|center_vertical"
                android:adjustViewBounds="true"
                android:layout_margin="5dp"
                android:onClick="onClick"
                />

            <ImageView
                android:id="@+id/main_logo"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:src="?attr/iconLogo"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:onClick="onClick"
                />

            <ma.snrt.news.ui.TextViewBold
                android:id="@+id/main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/page_title"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/searchBtn"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:src="?attr/iconSearch"
                android:layout_gravity="center|end"
                android:adjustViewBounds="true"
                android:layout_marginEnd="16dp"
                />

            <ImageView
                android:id="@+id/liveBtn"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:src="@drawable/live_btn"
                android:layout_gravity="center|end"
                android:adjustViewBounds="true"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                />

        </androidx.appcompat.widget.Toolbar>

        <com.duolingo.open.rtlviewpager.RtlViewPager
            android:id="@+id/home_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_above="@+id/bottom_nav"
            ></com.duolingo.open.rtlviewpager.RtlViewPager>

        <View
            android:id="@+id/bottom_nav_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/shadow"
            android:layout_above="@+id/bottom_nav"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/toolbarBg"
            app:theme="@style/ThemeOverlay.AppCompat"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
            app:elevation="8dp"
            android:layout_alignParentBottom="true"
            app:menu="@menu/menu_bottom"
            app:labelVisibilityMode="unlabeled"
            app:itemIconTint="@color/bottom_nav_color"
            app:itemIconSize="28dp"
            />

    </RelativeLayout>

    <include layout="@layout/menu_layout"/>

</androidx.drawerlayout.widget.DrawerLayout>
